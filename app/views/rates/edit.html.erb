<% content_for :title, "Edit Rate Table - #{@shipping_option.name}" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
  <div class="bg-white border-b border-gray-100 px-6 py-4">
    <div class="max-w-7xl mx-auto">
      <div class="flex items-center text-sm text-gray-500">
        <%= link_to root_path, class: "hover:text-blue-600 transition-colors duration-200" do %>
          Dashboard
        <% end %>
        <i class="fa-solid fa-chevron-right mx-3 text-gray-300"></i>
        <%= link_to shipping_options_path, class: "hover:text-blue-600 transition-colors duration-200" do %>
          Extended Shipping Options
        <% end %>
        <i class="fa-solid fa-chevron-right mx-3 text-gray-300"></i>
        <%= link_to shipping_options_path, class: "hover:text-blue-600 transition-colors duration-200" do %>
          Extended Shipping Options
        <% end %>
        <i class="fa-solid fa-chevron-right mx-3 text-gray-300"></i>
        <%= link_to rate_tables_path, class: "hover:text-blue-600 transition-colors duration-200" do %>
          <%= @shipping_option.name %>
        <% end %>
        <i class="fa-solid fa-chevron-right mx-3 text-gray-300"></i>
        <span class="text-blue-600 font-medium">Edit Rate</span>
      </div>
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-6 py-8">
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Rate Table</h1>
          <p class="text-gray-600">Update pricing rule for <strong><%= @shipping_option.name %></strong></p>
        </div>
        <%= link_to rate_tables_path, class: "inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-xl transition-colors duration-200" do %>
          <i class="fa-solid fa-arrow-left mr-2"></i>
          Back to Rate Tables
        <% end %>
      </div>

      <%= form_with model: [@shipping_option, @rate], local: true, class: "space-y-6" do |form| %>
        <% if @rate.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-xl p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fa-solid fa-exclamation-triangle text-red-400"></i>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@rate.errors.count, "error") %> prohibited this rate from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% @rate.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :ship_method_id, "Shipping Method", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :ship_method_id, @shipping_methods, { prompt: "Select a shipping method" }, { class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" } %>
          </div>

          <div>
            <%= form.label :country, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :country, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200", placeholder: "e.g., US, CA, MX", maxlength: 2 %>
          </div>

          <div>
            <%= form.label :region, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :region, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200", placeholder: "e.g., CA, NY, ON (optional)" %>
          </div>

          <div>
            <%= form.label :min_range_lbs, "Minimum Weight (lbs)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :min_range_lbs, step: 0.1, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200", placeholder: "0.1" %>
          </div>

          <div>
            <%= form.label :max_range_lbs, "Maximum Weight (lbs)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :max_range_lbs, step: 0.1, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200", placeholder: "5.0" %>
          </div>

          <div>
            <%= form.label :flat_rate, "Flat Rate ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :flat_rate, step: 0.01, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200", placeholder: "20.00" %>
          </div>

          <div>
            <%= form.label :min_charge, "Minimum Charge ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :min_charge, step: 0.01, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200", placeholder: "10.00" %>
          </div>
        </div>

        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
          <%= link_to rate_tables_path, class: "inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-xl transition-colors duration-200" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Rate Table", class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-medium rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
