<div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">Shipping Methods</h2>
      <p class="text-gray-600">Manage and configure your shipping methods</p>
    </div>
    <%= link_to new_shipping_option_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-medium rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105", data: { turbo_frame: "_top" } do %>
      <i class="fa-solid fa-plus mr-2"></i>
      Add Method
    <% end %>
  </div>

  <div class="overflow-x-auto">
    <% if @shipping_options.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Method</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Delivery Time</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Starting Rate</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Regions</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @shipping_options.each do |shipping_option| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= shipping_option.name %></div>
                <div class="text-sm text-gray-500"><%= pluralize(shipping_option.delivery_time, 'day') %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= pluralize(shipping_option.delivery_time, 'day') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                $<%= number_with_precision(shipping_option.starting_rate, precision: 2) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= shipping_option.countries&.join(', ') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= shipping_option.status&.capitalize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to edit_shipping_option_path(shipping_option), class: "text-blue-600 hover:text-blue-900 mr-3", data: { turbo_frame: "_top" } do %>
                  Edit
                <% end %>
                <%= link_to disable_shipping_option_path(shipping_option), method: :patch,
                    class: "text-orange-600 hover:text-orange-900 mr-3",
                    data: {
                      turbo_method: :patch,
                      turbo_confirm: "Are you sure you want to disable \"#{shipping_option.name}\"?",
                      turbo_frame: "_top"
                    } do %>
                  Disable
                <% end %>
                <%= link_to shipping_option_path(shipping_option), method: :delete,
                    class: "text-red-600 hover:text-red-900",
                    data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure you want to DELETE \"#{shipping_option.name}\"? This action cannot be undone and will permanently remove this shipping method.",
                      turbo_frame: "_top"
                    } do %>
                  Delete
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-12">
        <div class="mx-auto h-12 w-12 text-gray-400">
          <i class="fa-solid fa-box text-4xl"></i>
        </div>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No shipping methods</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new shipping method.</p>
        <div class="mt-6">
          <%= link_to new_shipping_option_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700", data: { turbo_frame: "_top" } do %>
            Add Method
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

